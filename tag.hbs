{{!< default}}
<h1>Tag: {{tag.name}}</h1>
<ol class="posts">
  {{#foreach posts}}
  <li>
    <a href="{{url}}" title="link to {{{title}}}"><h2>{{{title}}}</h2></a>
    <p class="excerpt">{{excerpt}}&hellip;</p>
    <div class="post meta">
      <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY-MM-DD"}}</time>
      <span class="post tags">{{tags prefix="on " separator=" "}}</span>
    </div>
    <hr class="divider post" />
  </li>
  {{/foreach}}
</ol>

{{pagination}}
